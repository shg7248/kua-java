
class Var {
	static int a;
	int b;
	void increment() { // 메소드 정의
		int c = 0;
		a++;
		b++;
		c++;
		System.out.println("a:"+a);
		System.out.println("b:"+b);
		System.out.println("c:"+c);
	}
} // Var

public class Ex05_07_변수 {
	public static void main(String[] args) throws Exception { // 정의
		
		Var var1 = new Var();
		var1.increment();		
		var1.increment();
		
		System.out.println();
		
		Var var2 = new Var();
		var2.increment();
		var2.increment();
		
		System.out.println();
		
		Var var3 = new Var();
		var3.increment();
		var3.increment();		
	}
}