import java.util.Arrays;

public class MergeSort {
	
	public static int[] mergeSort(int[] arr) {
		
		int leng = arr.length;
		if(leng<2)
			return arr;
		int divide = leng / 2;
		
		int[] left = Arrays.copyOfRange(arr, 0, divide);
		int[] right = Arrays.copyOfRange(arr, divide, leng);
		
		MergeSort.mergeSort(left);
		
		return null;
	}
	
	public static void main(String[] args) {
		int[] arr = {27,10,12,20,25,13,15,22};
		MergeSort.mergeSort(arr);
	}
}
