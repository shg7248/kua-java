import java.util.Arrays;

public class Ex04_02_1차원 {
	public static void main(String[] args) {
		
		int[] score = {79,88,99,33,100,55,95};
		float leng = score.length;
		System.out.println("length : "+score.length);
		
		int i,sum=0;
		for(i=0;i<score.length;i++) {
			System.out.print(score[i]+" ");
			sum += score[i];
		}
		
		System.out.println();
		System.out.println("sum="+sum);
		System.out.printf("avg=%.2f", sum/leng);
		System.out.println();
		
		sum=0;
		for(int j:score) {
			System.out.print(j+" ");
			sum += j;
		}
		
		System.out.println();
		System.out.println("sum="+sum);
		System.out.printf("avg=%.2f", sum/leng);
		System.out.println();
		
		Arrays.sort(score);
		System.out.println("max:"+score[0]);
		System.out.println("min:"+score[leng]);
	}
}
