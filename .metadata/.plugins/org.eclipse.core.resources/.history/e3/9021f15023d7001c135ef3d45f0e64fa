
public class Ex03_12_while {
	public static void main(String[] args) {
		
		int i;
		
		// 1 ~ 10 출력
		for(i=1;i<=10;i++)
			System.out.print(i+"\t");
		
		System.out.println();
		
		i=1;
		while(i<=10) {
			System.out.print(i+"\t");
			i++;
		}
		System.out.println("while밖 : "+i);
		
		i=1;
		while(i<=100) {
			if(i%7==0)
				System.out.println(i);
			i++;
		}
		
		System.out.println();
	}
}

/*
 * 		for(초기식; 조건식; 증감식){
 * 			반복할 문장;
 * 		}
 * 
 * 		while(조건식){
 * 			반복할 문장;
 * 			증감식;
 * 		}
 */
